{
  "version": 8,
  "name": "Cartographic",
  "metadata": {
    "maputnik:renderer": "mbgljs"
  },
  "sources": {
    "thames-watershed-cartographic": {
      "type": "vector",
      "tiles": [
        "https://mappingon.ca/data2/thames_watershed_cartographic/{z}/{x}/{y}.pbf"
      ]
    },
    "thames-watershed-contextual": {
      "type": "vector",
      "tiles": [
        "https://mappingon.ca/data2/thames_watershed_contextual/{z}/{x}/{y}.pbf"
      ]
    }
  },
  "sprite": "",
